<script type='text/javascript' src="https://telegram.org/js/telegram-web-app.js"></script>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

<a id="tweet" href="https://twitter.com/intent/tweet?text=" 
    class="twitter-hashtag-button" data-show-count="false" style="display: none !important;">
Tweet
</a>

<script>
	const element = document.getElementById("tweet")
    function tweet(text) {
        element.href = "https://twitter.com/intent/tweet?text=" + encodeURIComponent(text);
        element.click();
    }
</script>
